rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if true; // For simplicity, allowing all access
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      allow read, write: if true; // For simplicity, allowing all access
    }
  }
}
